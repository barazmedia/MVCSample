@model MVCSample.Models.Mahasiswa

<h2>Form Mahasiswa</h2>

<div class="row">
@if(ViewData["pesan"] != null)
{
    @Html.Raw(ViewData["pesan"]);
}
</div>

<form asp-action="CreatePost">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <div class="col-auto">
        <label for="Nim" class="control-label">NIM</label>
    </div>
    <div class="col-auto">
        <input asp-for="Nim" class="form-control"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Nim" class="text-danger"/>
    </div>

    <div class="col-auto">
        <label for="Nama" class="control-label">Nama</label>
    </div>
    <div class="col-auto">
        <input asp-for="Nama" class="form-control"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Nama" class="text-danger"/>
    </div>

    <div class="col-auto">
        <label for="Alamat" class="control-label">Alamat</label>
    </div>
    <div class="col-auto">
        <input asp-for="Alamat" class="form-control"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Alamat" class="text-danger"/>
    </div>

    <div class="col-auto">
        <label for="Email" class="control-label">Email</label>
    </div>
    <div class="col-auto">
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Email" class="text-danger"/>
    </div>

    <div class="col-auto">
        <label for="Telpon" class="control-label">Telpon</label>
    </div>
    <div class="col-auto">
        <input asp-for="Telpon" class="form-control"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Telpon" class="text-danger"/>
    </div>


    </br>
    <div class="col-auto">
        <input type="submit" class="btn btn-primary" value="Submit">
        <a asp-action="Index" class="btn btn-primary" >Back</a>
    </div>
</div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}