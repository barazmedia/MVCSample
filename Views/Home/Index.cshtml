@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
@if(Context.Session.GetString("Username") != null){
    @if(ViewData["pesan"] != null)
    {
        <h1 class="display-4">Welcome</h1>
        @Html.Raw(ViewData["pesan"])
        <h3>@Context.Session.GetString("Username")</h3>
    
    }
    else
    {
        <h1 class="display-4">Welcome</h1>
        <h4>User @Context.Session.GetString("Username") [@Context.Session.GetString("Aturan")]</h4>
    }
}

else {

    <h1 class="display-4">Selamat Datang</h1>
    <p>Anda belum Login. Silahkan <a href="/Pengguna/Login">Login</a>&nbsp;atau <a href="/Pengguna/Register">Register</a> terlebih dahulu.</p>
}
</div>