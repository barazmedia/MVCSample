@model MVCSample.Models.Pengguna

<h2>Login Form</h2>

<div class="row">
@if(TempData["pesan"] != null)
{
    @Html.Raw(TempData["pesan"]);
}

@if(ViewData["pesan"] != null)
{
    @Html.Raw(ViewData["pesan"]);
}
</div>

<form asp-action="Login">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <div class="col-auto">
        <label for="Username" class="control-label">Username</label>
    </div>
    <div class="col-auto">
        <input asp-for="Username" class="form-control"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Username" class="text-danger"/>
    </div>

    <div class="col-auto">
        <label for="Password" class="control-label">Password</label>
    </div>
    <div class="col-auto">
        <input asp-for="Password" class="form-control" type="password"/>
    </div>
    <div class="col-auto">
        <span asp-validation-for="@Model.Password" class="text-danger"/>
    </div>
    </br>
    <div class="col-auto">
        <input type="submit" class="btn btn-primary" value="Login">
    </div>
</div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}